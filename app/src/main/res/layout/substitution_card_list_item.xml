<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:minHeight="64dp"
	xmlns:android="http://schemas.android.com/apk/res/android">

		<View
			android:id="@+id/divider"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:background="@color/divider_black"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_constraintLeft_creator="1"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintTop_creator="1" />

		<ImageView
			android:id="@+id/substitution_event_icon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_marginStart="16dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		<!--android:src="@{event.type}"
		android:tint="@{event.type}"-->

		<TextView
			android:id="@+id/textViewUpper"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="20dp"
			android:layout_marginStart="24dp"
			android:maxLines="1"
			android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
			android:layout_marginTop="12dp"
			app:layout_constraintLeft_toRightOf="@+id/substitution_event_icon"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/textViewLower"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/textViewUpper"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="12dp"
			android:maxLines="1"
			app:layout_constraintLeft_toLeftOf="@+id/textViewUpper"
			app:layout_constraintBottom_toBottomOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>